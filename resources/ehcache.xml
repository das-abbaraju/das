<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="ehcache.xsd">
	<diskStore path="java.io.tmpdir" />

	<!-- For changeable application objects, wait a day -->
	<cache name="daily" maxElementsInMemory="500" eternal="false"
		timeToLiveSeconds="86400" overflowToDisk="false" />

	<!-- For most session elements, wait 30 minutes -->
	<cache name="temp" maxElementsInMemory="500" eternal="false"
		timeToLiveSeconds="1800" overflowToDisk="false" />

	<!-- For most page elements, wait 2 minutes -->
	<defaultCache maxElementsInMemory="10000" eternal="false"
		timeToLiveSeconds="120" overflowToDisk="false"
		diskExpiryThreadIntervalSeconds="120" memoryStoreEvictionPolicy="LRU" />

</ehcache>