<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN" "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="name">
		<field-validator type="requiredstring" short-circuit="true">
			<message>${getText("FacilitiesEdit.PleaseFillInCompanyName")}</message>
		</field-validator>
		<field-validator type="stringlength" short-circuit="true">
			<param name="minLength">2</param>
			<param name="trim">true</param>
			<message>${getText("FacilitiesEdit.NameAtLeast2Chars")}</message>
		</field-validator>
	</field>
	<field name="country">
		<field-validator type="required" short-circuit="true">
			<message>${getText("FacilitiesEdit.SelectCountry")}</message>
		</field-validator>
	</field>
	<field name="countrySubdivision">
		<field-validator type="fieldexpression" short-circuit="true">
			<param name="expression"><![CDATA[ country == null || (!country.hasCountrySubdivisions() || (country.hasCountrySubdivisions() && (countrySubdivision != null))) ]]></param>
			<message>${getText("FacilitiesEdit.PleaseFillInCountrySubdivision")}</message>
		</field-validator>
	</field>
	<field name="discountPercent">
		<field-validator type="fieldexpression" short-circuit="true">
			<param name="expression"><![CDATA[ !discountPercentInvalidRange ]]></param>
			<message>${getText("FacilitiesEdit.EnterValidRange")}</message>
		</field-validator>
		<field-validator type="fieldexpression" short-circuit="true">
			<param name="expression"><![CDATA[ !discountPercentWithoutExpiration ]]></param>
			<message>${getText("FacilitiesEdit.DiscountExpirationDateRequired")}</message>
		</field-validator>
	</field>
	<field name="rememberMeTimeInDays">
		<field-validator type="fieldexpression" short-circuit="true">
			<param name="expression"><![CDATA[ rememberMeTimeEnabled && rememberMeTimeInDays > 0 ]]></param>
			<message>${getText("FacilitiesEdit.RememberMeMustBePositive")}</message>
		</field-validator>
	</field>
</validators>