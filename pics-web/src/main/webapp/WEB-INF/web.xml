<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <distributable/>

    <context-param>
        <!-- To override, add -Dpics.ftpDir=folder_location to your startup command -->
        <param-name>FTP_DIR</param-name>
        <param-value>P:/Development/ftp_dir</param-value>
    </context-param>
    <listener>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
    </listener>
    <listener>
        <listener-class>
            com.picsauditing.servlet.listener.TranslationServiceCacheWarmer
        </listener-class>
    </listener>
    <filter>
        <filter-name>pageLogger</filter-name>
        <filter-class>
            com.picsauditing.filters.PageLoggerFilter
        </filter-class>
    </filter>
    <filter>
        <filter-name>picsMetrics</filter-name>
        <filter-class>
            com.picsauditing.filters.MetricsFilter
        </filter-class>
    </filter>
    <filter>
        <filter-name>springEntityManagerPerView</filter-name>
        <filter-class>
            org.springframework.orm.jpa.support.OpenEntityManagerInViewFilter
        </filter-class>
    </filter>
    <filter>
        <filter-name>struts-prepare</filter-name>
        <filter-class>
            org.apache.struts2.dispatcher.ng.filter.StrutsPrepareFilter
        </filter-class>
    </filter>
    <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>
            com.opensymphony.module.sitemesh.filter.PageFilter
        </filter-class>
    </filter>
    <filter>
        <filter-name>struts-execute</filter-name>
        <filter-class>
            org.apache.struts2.dispatcher.ng.filter.StrutsExecuteFilter
        </filter-class>
    </filter>
    <filter-mapping>
        <filter-name>picsMetrics</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>pageLogger</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>springEntityManagerPerView</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>struts-prepare</filter-name>
        <url-pattern>*.action</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>struts-prepare</filter-name>
        <url-pattern>/employee-guard/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>struts-prepare</filter-name>
        <url-pattern>/users/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>struts-execute</filter-name>
        <url-pattern>*.action</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>struts-execute</filter-name>
        <url-pattern>/employee-guard/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>struts-execute</filter-name>
        <url-pattern>/users/*</url-pattern>
    </filter-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/struts/exception/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/struts/exception/500.jsp</location>
    </error-page>

    <jsp-config>
        <taglib>
            <taglib-uri>sitemesh-page</taglib-uri>
            <taglib-location>
                /WEB-INF/sitemesh-page.tld
            </taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>sitemesh-decorator</taglib-uri>
            <taglib-location>
                /WEB-INF/sitemesh-decorator.tld
            </taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>pics-taglib</taglib-uri>
            <taglib-location>
                /WEB-INF/pics.tld
            </taglib-location>
        </taglib>
        <taglib>
            <taglib-uri>twitter-bootstrap-tags</taglib-uri>
            <taglib-location>
                /WEB-INF/tags/twitter-bootstrap.tld
            </taglib-location>
        </taglib>
    </jsp-config>


    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
    <servlet>
        <servlet-name>loadPDF</servlet-name>
        <servlet-class>loadPDF</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewPDF</servlet-name>
        <servlet-class>viewPDF</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StreamUploader</servlet-name>
        <servlet-class>
            com.picsauditing.servlet.upload.StreamUploader
        </servlet-class>
    </servlet>
    <servlet>
        <display-name>
            Apache-Axis Servlet
        </display-name>
        <servlet-name>AxisServlet</servlet-name>
        <servlet-class>
            org.apache.axis2.transport.http.AxisServlet
        </servlet-class>
    </servlet>
    <servlet>
        <display-name>
            Apache-Axis Admin Servlet Web Admin
        </display-name>
        <servlet-name>AxisAdminServlet</servlet-name>
        <servlet-class>
            org.apache.axis2.transport.http.AxisAdminServlet
        </servlet-class>
        <!--
        This line is causing problems with starting the application
        I'm removing it for now since it's only being used by NACE which isn't active right now
        <load-on-startup>100</load-on-startup>
        -->
    </servlet>
    <servlet-mapping>
        <servlet-name>loadPDF</servlet-name>
        <url-pattern>/servlet/loadPDF</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewPDF</servlet-name>
        <url-pattern>/servlet/viewPDF</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StreamUploader</servlet-name>
        <url-pattern>/StreamUploader</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AxisServlet</servlet-name>
        <url-pattern>/servlet/AxisServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AxisServlet</servlet-name>
        <url-pattern>*.jws</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AxisServlet</servlet-name>
        <url-pattern>/services/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AxisAdminServlet</servlet-name>
        <url-pattern>/axis2-admin/*</url-pattern>
    </servlet-mapping>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/pics</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
    </welcome-file-list>
    <mime-mapping>
        <extension>docx</extension>
        <mime-type>application/vnd.openxmlformats-officedocument.wordprocessingml.document</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>xlsx</extension>
        <mime-type>application/vnd.openxmlformats-officedocument.spreadsheetml.sheet</mime-type>
    </mime-mapping>

    <servlet>
        <servlet-name>perf4j</servlet-name>
        <servlet-class>com.picsauditing.servlet.PicsGraphingServlet</servlet-class>
        <init-param>
            <param-name>graphNames</param-name>
            <param-value>graphExecutionTimes,graphExecutionTPS</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>perf4j</servlet-name>
        <url-pattern>/perf4j</url-pattern>
    </servlet-mapping>

</web-app>
