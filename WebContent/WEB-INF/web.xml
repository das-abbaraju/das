<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<!-- Set the local upload directory to /wwwroot/www.picsauditing.com/ftp-bin -->
	<!-- Modify for your local system -->
	<context-param> 
		<description>local directory for uploaded files</description> 
		<param-name>FTP_DIR</param-name> 
		<param-value>/wwwroot/www.picsauditing.com/ftp-bin</param-value> 
	</context-param>
	<display-name>
		PICSWebProject
	</display-name>
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<servlet>
		<servlet-name>showpdf</servlet-name>
		<servlet-class>showpdf</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>imageResizer</servlet-name>
		<servlet-class>imageResizer</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>loadPDF</servlet-name>
		<servlet-class>loadPDF</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>viewPDF</servlet-name>
		<servlet-class>viewPDF</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>viewExcel</servlet-name>
		<servlet-class>viewExcel</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>
		StreamUploader</display-name>
		<servlet-name>StreamUploader</servlet-name>
		<servlet-class>
		com.picsauditing.servlet.upload.StreamUploader</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>
		Usergroup</display-name>
		<servlet-name>Usergroup</servlet-name>
		<servlet-class>
		Usergroup</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>showpdf</servlet-name>
		<url-pattern>/servlet/showpdf</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>imageResizer</servlet-name>
		<url-pattern>/servlet/imageResizer</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>loadPDF</servlet-name>
		<url-pattern>/servlet/loadPDF</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>viewPDF</servlet-name>
		<url-pattern>/servlet/viewPDF</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>viewExcel</servlet-name>
		<url-pattern>/servlet/viewExcel.xls</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StreamUploader</servlet-name>
		<url-pattern>/StreamUploader</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Usergroup</servlet-name>
		<url-pattern>/usergroup</url-pattern>
	</servlet-mapping>
	<error-page>
    	<error-code>404</error-code>
    	<location>/exception_handler.jsp</location>
	</error-page>
	<error-page>
    	<error-code>403</error-code>
    	<location>/exception_handler.jsp</location>
	</error-page>
	<error-page>
    	<exception-type>javax.servlet.ServletException</exception-type >
    	<location>/exception_handler.jsp</location>
	</error-page>
	<error-page>
    	<exception-type>java.io.IOException</exception-type >
    	<location>/exception_handler.jsp</location>
	</error-page>
	<error-page>
    	<exception-type>java.lang.Throwable</exception-type >
    	<location>/exception_handler.jsp</location>
	</error-page>	
<!--	<listener>
    	<listener-class>com.picsauditing.listeners.SessionListener</listener-class>
	</listener>
	<listener>
    	<listener-class>com.picsauditing.listeners.SessionAttributeListener</listener-class>
	</listener>
-->	<resource-ref>
      <description>DB Connection</description>
      <res-ref-name>jdbc/pics</res-ref-name>
      <res-type>javax.sql.DataSource</res-type>
      <res-auth>Container</res-auth>
  	</resource-ref>  	
	
	<welcome-file-list>
	    <welcome-file>index.jsp</welcome-file>	
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>		
	</welcome-file-list>
</web-app>
