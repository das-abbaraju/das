<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<!-- Set the local upload directory to /wwwroot/www.picsauditing.com/ftp-bin -->
	<!-- Modify for your local system -->
	
	<!-- Osha, Grace dates-->
	<context-param>
		<param-name>currentYearStart</param-name>
		<param-value>12/17</param-value>
	</context-param>
	<context-param>
		<param-name>loginStartDate</param-name>
		<param-value>1/1</param-value>
	</context-param>
	<context-param>
		<param-name>currentYearGrace</param-name>
		<param-value>2/28</param-value>
	</context-param>
	<!-- END Osha, Grace dates -->
	<!-- Pricing -->
		 <context-param>
			<param-name>pqfOnlyPrice</param-name>
			<param-value>99</param-value>
		</context-param>
		<context-param>
			<param-name>onePrice</param-name>
			<param-value>399</param-value>
		</context-param>
		<context-param>
			<param-name>fourPrice</param-name>
			<param-value>699</param-value>
		</context-param>
		<context-param>
			<param-name>eightPrice</param-name>
			<param-value>999</param-value>
		</context-param>
		<context-param>
			<param-name>twelvePrice</param-name>
			<param-value>1299</param-value>
		</context-param>
		<context-param>
			<param-name>nineteenPrice</param-name>
			<param-value>1699</param-value>
		</context-param>
		<context-param>
			<param-name>twentyPrice</param-name>
			<param-value>1999</param-value>
		</context-param>
	<!-- END Pricing -->
	
    <context-param>
		<param-name>org.richfaces.SKIN</param-name>
		<param-value>classic</param-value>
	</context-param>
	<context-param>
		<param-name>FTP_DIR</param-name>
		<param-value>/wwwroot/www.picsauditing.com/ftp-bin</param-value>
	</context-param>
	<!-- Use Documents Saved as *.xhtml -->
	<context-param>
		<param-name>javax.faces.DEFAULT_SUFFIX</param-name>
		<param-value>.xhtml</param-value>
	</context-param>

	<!-- Special Debug Output for Development -->
	<context-param>
		<param-name>facelets.DEVELOPMENT</param-name>
		<param-value>true</param-value>
	</context-param>

	<!-- Optional JSF-RI Parameters to Help Debug -->
	<context-param>
		<param-name>com.sun.faces.validateXml</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>com.sun.faces.verifyObjects</param-name>
		<param-value>true</param-value>
	</context-param>
	<filter>
		<display-name>Ajax4jsf Filter</display-name>
		<filter-name>ajax4jsf</filter-name>
		<filter-class>org.ajax4jsf.Filter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ajax4jsf</filter-name>
		<servlet-name>Faces Servlet</servlet-name>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
		<dispatcher>INCLUDE</dispatcher>
	</filter-mapping>
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<servlet>
		<servlet-name>showpdf</servlet-name>
		<servlet-class>showpdf</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>imageResizer</servlet-name>
		<servlet-class>imageResizer</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>loadPDF</servlet-name>
		<servlet-class>loadPDF</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>viewPDF</servlet-name>
		<servlet-class>viewPDF</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>viewExcel</servlet-name>
		<servlet-class>viewExcel</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>StreamUploader</servlet-name>
		<servlet-class>
			com.picsauditing.servlet.upload.StreamUploader
		</servlet-class>
	</servlet>
	<!-- Faces Servlet -->
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<!-- Faces Servlet Mapping -->
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>/faces/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>showpdf</servlet-name>
		<url-pattern>/servlet/showpdf</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>imageResizer</servlet-name>
		<url-pattern>/servlet/imageResizer</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>loadPDF</servlet-name>
		<url-pattern>/servlet/loadPDF</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>viewPDF</servlet-name>
		<url-pattern>/servlet/viewPDF</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>viewExcel</servlet-name>
		<url-pattern>/servlet/viewExcel.xls</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StreamUploader</servlet-name>
		<url-pattern>/StreamUploader</url-pattern>
	</servlet-mapping>
