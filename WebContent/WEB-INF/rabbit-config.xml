<beans:beans xmlns="http://www.springframework.org/schema/rabbit"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:task="http://www.springframework.org/schema/task"
	xmlns:tx="http://www.springframework.org/schema/tx" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.0.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
	http://www.springframework.org/schema/rabbit http://www.springframework.org/schema/rabbit/spring-rabbit-1.1.xsd" 
	default-autowire="byName">

	<!--  the connection settings for this are in /resources/amqp_connection.properties -->
	<connection-factory id="ifJndiFailsConnectionFactory" host="${rabbit.host}" port="${rabbit.port}" username="${rabbit.username}" password="${rabbit.password}"/>  
	
	<beans:bean id="connectionFactory" class="org.springframework.jndi.JndiObjectFactoryBean">
    	<beans:property name="jndiName" value="java:comp/env/amqp/pics" />   
    	<beans:property name="resourceRef" value="false" />
    	<beans:property name="defaultObject" ref="ifJndiFailsConnectionFactory"/>
 	</beans:bean>
	
	<admin id="amqpAdmin" connection-factory="connectionFactory"/>
	
	<queue id="flag-changes" name="flag-changes" />
	<queue id="email-queue-priority" name="email-queue-priority" />
	<queue id="email-queue-normal" name="email-queue-normal" />
	<queue id="email-subscription" name="email-subscription" />
	<queue id="subscription" name="subscription" />
		
	<fanout-exchange name="flag-changes-exchange">
	  <bindings>
	    <binding queue="flag-changes"/>
	  </bindings>
	</fanout-exchange>	
	
	<direct-exchange name="email-queue-exchange">
	  <bindings>
	    <binding queue="email-queue-priority" key="email-queue-priority"/>
	    <binding queue="email-queue-normal" key="email-queue-normal"/>
	    <binding queue="email-subscription" key="email-subscription"/>
	  </bindings>
	</direct-exchange>

	<direct-exchange name="subscription-exchange">
	  <bindings>
	    <binding queue="subscription" key="subscription"/>
	  </bindings>
	</direct-exchange>
	
	<queue id="csr-assignments" name="csr-assignments" />
	
	<direct-exchange name="csr-assignments-exchange" xmlns="http://www.springframework.org/schema/rabbit">
	  <bindings>
	    <binding queue="csr-assignments"/>
	  </bindings>
	</direct-exchange>		
	
	<template message-converter="messageConverter" id="FlagChangeTemplate" connection-factory="connectionFactory" exchange="flag-changes-exchange" queue="flag-changes"/>
	<beans:bean id="FlagChangePublisher" class="com.picsauditing.messaging.PublisherRabbitMq" scope="prototype">
		<beans:property name="amqpTemplate" ref="FlagChangeTemplate" />
		<beans:property name="featureToggleChecker" ref="FeatureToggle" />
		<beans:property name="featureToggleName" value="Toggle.BackgroundProcesses.FlagChanges" />
	</beans:bean>

	<template message-converter="messageConverter" id="EmailQueueTemplate" connection-factory="connectionFactory" exchange="email-queue-exchange"/>
	<beans:bean id="EmailQueuePublisher" class="com.picsauditing.messaging.PublisherRabbitMq" scope="prototype">
		<beans:property name="amqpTemplate" ref="EmailQueueTemplate" />
		<beans:property name="featureToggleChecker" ref="FeatureToggle" />
		<beans:property name="featureToggleName" value="Toggle.BackgroundProcesses.EmailQueue" />
	</beans:bean>

	<template message-converter="messageConverter" id="CsrAssignmentTemplate" connection-factory="connectionFactory" exchange="csr-assignments-exchange" queue="csr-assignments"/>
	<beans:bean id="CsrAssignmentPublisher" class="com.picsauditing.messaging.PublisherRabbitMq" scope="prototype">
		<beans:property name="amqpTemplate" ref="CsrAssignmentTemplate" />
		<beans:property name="featureToggleChecker" ref="FeatureToggle" />
		<beans:property name="featureToggleName" value="Toggle.BackgroundProcesses.Csr_SingleAssignment" />
	</beans:bean>

	<template message-converter="messageConverter" id="EmailSubscriptionTemplate" connection-factory="connectionFactory" exchange="subscription-exchange" queue="subscription" routing-key="subscription"/>
	<beans:bean id="EmailSubscriptionPoller" class="com.picsauditing.messaging.subscription.EmailSubscriptionPoller">
		<beans:property name="featureToggleName" value="Toggle.BackgroundProcesses.SubscriptionEmail" />
	</beans:bean>

	<beans:bean id="defaultJavaTypeMapper" class="org.springframework.amqp.support.converter.DefaultJavaTypeMapper">
<!-- 		<beans:property name="idClassMapping"> -->
<!-- 			<beans:map> -->
<!-- 				<beans:entry key="com.picsauditing.jpa.entities.EmailQueue" value="com.picsauditing.mail.Email" /> -->
<!-- 			</beans:map> -->
<!-- 		</beans:property> -->
	</beans:bean>
	
	<beans:bean id="messageConverter" class="org.springframework.amqp.support.converter.JsonMessageConverter">
		<beans:property name="javaTypeMapper" ref="defaultJavaTypeMapper"/>
	</beans:bean>

</beans:beans>
