<!-- The contents of this file will be loaded for each web application -->
<Context path="/" reloadable="true" docBase="@@APPDIR@@/ROOT">
	<Environment name="runtimeMode" value="@@RUNTIME_MODE@@"
		type="java.lang.String" override="false"/>

	<Resource name="jdbc/pics" auth="Container"
		type="javax.sql.DataSource" maxActive="60" maxIdle="30"
		maxWait="10000" removeAbandoned="true" removeAbandonedTimeout="20"
		logAbandoned="true" 
		username="@@DBUSER@@" 
		password="@@DBPASS@@"
		driverClassName="com.mysql.jdbc.Driver"
		url="@@DBURL@@?zeroDateTimeBehavior=convertToNull&amp;jdbcCompliantTruncation=false" />
</Context>
