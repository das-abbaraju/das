<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<!-- Modify for the production system -->
	<!-- Set the local upload directory to ftp-bin -->
	<context-param>
		<param-name>FTP_DIR</param-name>
		<param-value>/wwwroot/www.picsauditing.com/ftp-bin</param-value>
	</context-param>

	<!-- BELOW THIS LINE SHOULD BE NOT SITE SPECIFIC -->
	
	<!-- Osha, Grace dates-->
	<context-param>
		<param-name>currentYearStart</param-name>
		<param-value>12/17</param-value>
	</context-param>
	<context-param>
		<param-name>loginStartDate</param-name>
		<param-value>1/1</param-value>
	</context-param>
	<context-param>
		<param-name>currentYearGrace</param-name>
		<param-value>2/28</param-value>
	</context-param>
	<!-- END Osha, Grace dates -->
	<!-- Pricing -->
	<context-param>
		<param-name>pqfOnlyPrice</param-name>
		<param-value>99</param-value>
	</context-param>
	<context-param>
		<param-name>onePrice</param-name>
		<param-value>399</param-value>
	</context-param>
	<context-param>
		<param-name>fourPrice</param-name>
		<param-value>699</param-value>
	</context-param>
	<context-param>
		<param-name>eightPrice</param-name>
		<param-value>999</param-value>
	</context-param>
	<context-param>
		<param-name>twelvePrice</param-name>
		<param-value>1299</param-value>
	</context-param>
	<context-param>
		<param-name>nineteenPrice</param-name>
		<param-value>1699</param-value>
	</context-param>
	<context-param>
		<param-name>twentyPrice</param-name>
		<param-value>1999</param-value>
	</context-param>
	<!-- END Pricing -->

	<!-- 
		<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
		</listener>
	-->
	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>

	<filter>
		<filter-name>springEntityManagerPerView</filter-name>
		<filter-class>
			org.springframework.orm.jpa.support.OpenEntityManagerInViewFilter
		</filter-class>
	</filter>
	<filter>
		<filter-name>struts-cleanup</filter-name>
		<filter-class>
			org.apache.struts2.dispatcher.ActionContextCleanUp
		</filter-class>
	</filter>
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>
			org.apache.struts2.dispatcher.FilterDispatcher
		</filter-class>
	</filter>
	<filter>
		<filter-name>sitemesh</filter-name>
		<filter-class>
			com.opensymphony.module.sitemesh.filter.PageFilter
		</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>springEntityManagerPerView</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>struts-cleanup</filter-name>
		<url-pattern>*.action</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>sitemesh</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.action</url-pattern>
	</filter-mapping>

	<jsp-config>
		<taglib>
			<taglib-uri>sitemesh-page</taglib-uri>
			<taglib-location>
				/WEB-INF/sitemesh-page.tld
			</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>sitemesh-decorator</taglib-uri>
			<taglib-location>
				/WEB-INF/sitemesh-decorator.tld
			</taglib-location>
		</taglib>
		<taglib>
			<taglib-uri>pics-taglib</taglib-uri>
			<taglib-location>
				/WEB-INF/pics.tld
			</taglib-location>
		</taglib>
	</jsp-config>


	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<servlet>
		<servlet-name>showpdf</servlet-name>
		<servlet-class>showpdf</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>loadPDF</servlet-name>
		<servlet-class>loadPDF</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>viewPDF</servlet-name>
		<servlet-class>viewPDF</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>viewExcel</servlet-name>
		<servlet-class>viewExcel</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>StreamUploader</servlet-name>
		<servlet-class>
			com.picsauditing.servlet.upload.StreamUploader
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>showpdf</servlet-name>
		<url-pattern>/servlet/showpdf</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>loadPDF</servlet-name>
		<url-pattern>/servlet/loadPDF</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>viewPDF</servlet-name>
		<url-pattern>/servlet/viewPDF</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>viewExcel</servlet-name>
		<url-pattern>/servlet/viewExcel.xls</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StreamUploader</servlet-name>
		<url-pattern>/StreamUploader</url-pattern>
	</servlet-mapping>
