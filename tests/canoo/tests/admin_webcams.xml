<?xml version="1.0"?>
<!DOCTYPE project SYSTEM "../dtd/Project.dtd">

<project name="PICS" default="test">
	<property name="login.username" value="eorozco" />
	
	<target name="test">
		<webtest name="Admin Webcams">
			&config;
			<steps>
				&login;
				&body_verify;
				
				<group description="Manage Webcams">
					<enableJavaScript enable="false"/>
					<group description="Create Webcam">
						<sleep seconds="5"/>
						<invoke url="ManageWebcams.action"/>
						<sleep seconds="5"/>
						<clickLink label="Manage Webcams"/>
						<setInputField name="webcam.make" value="Samsung"/>
						<setInputField name="webcam.model" value="Canoo Webcam"/>
						<setInputField name="webcam.replacementCost" value="500"/>
						<clickButton label="Save"/>
						<verifyText text="Saved webcam"/>
					</group>
					<group description="Assign Webcam">
						<invoke url="AssignWebcams.action"/>
						<clickLink href="AssignWebcams.action?audit.id="/>
						<setSelectField name="audit.country" text="United States"/>
						<setSelectField htmlId="AssignWebcams_webcam_id" optionIndex="1"/>
						<setInputField htmlId="AssignWebcams_webcam_trackingNumber" value="7000000000"/>
						<clickButton label="Save" name="button"/>
						<verifyText description="Verify that text is contained in the page" text="Sent webcam"/>
					</group>
					<group description="Assign Webcam">
						
					</group>
				</group>
			</steps>
		</webtest>
	</target>
</project>
