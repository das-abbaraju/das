<?xml version="1.0"?>
<!DOCTYPE project SYSTEM "../dtd/Project.dtd">

<project name="PICS" default="test">
	<property name="login.username" value="tallred" />
	
	<target name="test">
		<webtest name="Admin Webcams">
			&config;
			<steps>
				&login;
				&body_verify;
				
				<group description="Manage Webcams">
					<group description="Create Webcam">
						<invoke url="ManageWebcams.action"/>
						<setInputField htmlId="webcam_form_webcam_model" value="Canoo Test Cam"/>
						<setInputField htmlId="webcam_form_webcam_replacementCost" value="50"/>
						<sleep description="wait for jQuery to load" seconds="2"/>
						<clickButton label="Save"/>
						<sleep description="wait for jQuery to load" seconds="1"/>
						<verifyText text="Saved Webcam"/>
					</group>

					<group description="Edit Webcam">
					<invoke url="ManageWebcams.action?webcam.id=4"/>
						<setInputField name="webcam.make" value="Samsung"/>
						<sleep description="wait for jQuery to load" seconds="1"/>
						<clickButton label="Save"/>
						<sleep description="wait for jQuery to load" seconds="1"/>
						<invoke url="ManageWebcams.action?webcam.id=4"/>
						<verifyText text="Samsung"/>
						<setInputField name="webcam.make" value="Logitech"/>
						<clickButton label="Save"/>
					</group>
				</group>
			</steps>
		</webtest>
	</target>
</project>
