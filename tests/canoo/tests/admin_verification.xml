							</ifStep>
		
							<ifStep>
								<condition>
									<verifyElementText description="Verify if not already" htmlId="verify_2066" text="Verify"/>
								</condition>
								<clickButton description="1.1.4 CanOSH Yes / No" htmlId="verify_2066"/>
								<sleep seconds="2"/>
							</ifStep>
		
							<ifStep>
								<condition>
									<verifyElementText description="Verify if not already" htmlId="verify_2034" text="Verify"/>
								</condition>
								<clickButton description="5.1.1 EMR Value" htmlId="verify_2034"/>
								<sleep seconds="2"/>
							</ifStep>
		
							<ifStep>
								<condition>
									<verifyElementText description="Verify if not already" htmlId="verify_2037" text="Verify"/>
								</condition>
								<clickButton description="5.1.3 EMR Upload" htmlId="verify_2037"/>
								<sleep seconds="2"/>
							</ifStep>
		
							<ifStep>
								<condition>
									<verifyElementText description="Verify if not already" htmlId="verify_19576" text="Verify"/>
								</condition>
								<clickButton description="Verify OSHA Logs" name="verify"/>
								<sleep seconds="2"/>
							</ifStep>
					
							<verifyText description="Verify CSR Stamp" text="Trevor Allred"/>
							
							<ifStep description="Check if approve btn present. Approve if so.">
								<condition>
									<verifyElementText description="Check if Approve button present" type="button" text="Approve"/>
								</condition>
								<else>
									<clickButton label="Reject"/>
									</else>
									<clickButton label="Approve"/>
								<sleep seconds="2"/>
							</ifStep>
						</group>
						<verifyText text="Trevor Allred"/>
						<clickLink label="Annual Update"/>
						<verifyText text="Trevor Allred"/>
						<verifyText text="Active"/>
	
		    </steps>		
		</webtest>
	</target>
</project>
