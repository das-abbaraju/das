<?xml version="1.0"?>
<!DOCTYPE project SYSTEM "../dtd/Project.dtd">

<project name="PICS" default="test">
	<property name="login.username" value="tallred" />
    <target name="test">
					<webtest name="Admin Verification">
						&config;
						<steps>
							&login;
							&body_verify;
							
				<group description="PQF Verification">
