						<clickButton label="Verify"/>
						<sleep seconds="10"/>
				</group>
						<group description="Verification Detail"/>
							<ifStep>
								<condition>
									<verifyElementText description="Verify if not already" htmlId="verify_2033" text="Verify"/>
								</condition>
								<clickButton description="1.1.1 EMR Yes / No" htmlId="verify_2033"/>
								<sleep seconds="2"/>
							</ifStep>
		
							<ifStep>
								<condition>
									<verifyElementText description="1.1.2 OSHA Yes / No" htmlId="verify_2064" text="Verify"/>
								</condition>
								<clickButton description="1.1.2 OSHA Yes / No" htmlId="verify_2064"/>
								<sleep seconds="2"/>
							</ifStep>
		
							<ifStep>
								<condition>
									<verifyElementText description="Verify if not already" htmlId="verify_2065" text="Verify"/>
								</condition>
								<clickButton description="1.1.3 MSHA Yes / No" htmlId="verify_2065"/>
