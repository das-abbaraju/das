<?xml version="1.0"?>
<!DOCTYPE project SYSTEM "../dtd/Project.dtd">

<project name="PICS" default="test">
	<property name="login.username" value="opman" />
	
	<target name="test">
		<webtest name="Admin Audits">
			&config;
			<steps>
				&login;
				&body_verify;
				<!--
				<storeProperty name="report_link" value="Audit List" />
				&click_report;
				<storeProperty name="report_link" value="NCMS Audits" />
				&click_report;
				<storeProperty name="report_link" value="Audit Calendar" />
				&click_report;
				<storeProperty name="report_link" value="Sched. &amp; Assign" />
				&click_report;
				<storeProperty name="report_link" value="PQF Verification" />
				&click_report;-->


						&login;
						&body_verify;
					
						<group description="Go to report, pull up contractor">
							<clickLink href="AuditAssignments.action?filter.status=Active"/>
							<clickLink description="Click link: Audit Type" htmlId="audittypefilter"/>

							<setSelectField name="filter.auditTypeID" text="Implementation Audit"/>

							<clickButton label="Search"/>
							<clickLink label="Scheduled"/>
							<clickLink href="ScheduleAudit.action"/>
						</group>
						<group description="Add Address Information">
						<sleep seconds="3"/>
						<setInputField name="conAudit.contractorContact" value="Joe Smith"/>
						<setInputField name="conAudit.phone2" value="tester@picsauditing.com"/>
						<setInputField name="conAudit.phone" value="949-387-1940"/>
						<setInputField name="conAudit.address" value="555 Main St"/>
						<setInputField name="conAudit.zip" value="46112"/>
						<enableJavaScript enable="true"/>
						<clickButton label="Verify Address"/>
						<sleep seconds="5"/>
						<clickButton label="Next >>"/>
						<sleep seconds="3"/>
						</group>
						<group description="Select Date and Time">
							<ifStep>
								<condition>
									<clickLink label="AM to"/>
								</condition>
								<else>
									<clickLink label="PM to"/>
								</else>
							</ifStep>
						</group>
						<group description="Confirm Audit">
							<ifStep>
								<condition>
									<verifyText text="Video Camera"/>
								</condition>	
								<setRadioButton description="Check radio button conAudit.needsCamera: true" name="conAudit.needsCamera" value="true"/>
							</ifStep>
							
							<setCheckbox name="confirmed"/>
							<setCheckbox htmlId="ScheduleAudit_confirmed"/>
							<clickButton label="Confirm Audit"/>
							<verifyText description="Verify that text is contained in the page" text="Congratulations"/>
						</group>
					</steps>
				</webtest>
	</target>
</project>
