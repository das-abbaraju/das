<?xml version="1.0"?>
<!DOCTYPE project SYSTEM "../dtd/Project.dtd">

<project name="PICS" default="test">
	<property name="register.username" value="canoo_contractor1" />
	<property name="admin.username" value="jfazeli" />
	<target name="test">
		<webtest name="Contractor Registration - Post Cleanup">
			&config;
			<steps>
				<storeProperty description="Change login to Admin" 
					name="login.username" 
					propertyType="ant"
					value="${admin.username}"/>
				&login;
				<group description="Delete Canoo's Test Contractor">
					<setInputField name="filter.accountName" value="Canoo's Test Contractor"/>
					<clickButton label="Search"/>
					<ifStep>
						<condition>
							<verifyText text="Canoo's Test Contractor"/> 
						</condition>
							<clickElement href="ContractorEdit.action"/>
							<enableJavaScript enable="true"/>
							<clickButton label="Delete"/>
					</ifStep>	
				</group>
			</steps>
		</webtest>
	</target>
</project>
