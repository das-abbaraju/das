<beans:beans xmlns="http://www.springframework.org/schema/rabbit"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
	http://www.springframework.org/schema/rabbit http://www.springframework.org/schema/rabbit/spring-rabbit-1.1.xsd"
	default-autowire="byName">

	<!--  the connection settings for this are in /resources/META-INF/amqp_connection.properties -->
	<connection-factory id="FDC_ifJndiFailsConnectionFactory" host="${rabbit.host}" port="${rabbit.port}" username="${rabbit.username}" password="${rabbit.password}"/>

	<beans:bean id="FDC_connectionFactory" class="org.springframework.jndi.JndiObjectFactoryBean">
    	<beans:property name="jndiName" value="java:comp/env/amqp/pics" />
    	<beans:property name="resourceRef" value="false" />
    	<beans:property name="defaultObject" ref="FDC_ifJndiFailsConnectionFactory"/>
 	</beans:bean>

	<template message-converter="FDC_messageConverter" id="FDC_FlagChangeTemplate"
              connection-factory="FDC_connectionFactory" exchange="flag-changes-exchange" queue="flag-changes"/>

	<beans:bean id="FDC_FlagChangePublisher" class="com.picsauditing.flagcalculator.messaging.FlagChangePublisher" scope="prototype">
		<beans:property name="amqpTemplate" ref="FDC_FlagChangeTemplate" />
	</beans:bean>

	<beans:bean id="FDC_defaultJavaTypeMapper" class="org.springframework.amqp.support.converter.DefaultJavaTypeMapper">
<!-- 		<beans:property name="idClassMapping"> -->
<!-- 			<beans:map> -->
<!-- 				<beans:entry key="com.picsauditing.jpa.entities.EmailQueue" value="com.picsauditing.mail.Email" /> -->
<!-- 			</beans:map> -->
<!-- 		</beans:property> -->
	</beans:bean>

	<beans:bean id="FDC_messageConverter" class="org.springframework.amqp.support.converter.JsonMessageConverter">
		<beans:property name="javaTypeMapper" ref="FDC_defaultJavaTypeMapper"/>
	</beans:bean>

</beans:beans>
