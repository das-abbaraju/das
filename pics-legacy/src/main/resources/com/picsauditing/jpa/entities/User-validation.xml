<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.2//EN" "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">

<validators>

    <field name="username">
        <field-validator type="requiredstring" short-circuit="true">
            <message>${getText("JS.Validation.Required")}</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="minLength">5</param>
            <message>${getText("JS.Validation.Minimum5Characters")}</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">100</param>
            <message>${getText("JS.Validation.Maximum100Characters")}</message>
        </field-validator>
        <field-validator type="fieldexpression" short-circuit="true">
            <param name="expression"><![CDATA[containsOnlySafeCharacters(username)]]></param>
            <message>${getText("JS.Validation.SpecialCharacters")}</message>
        </field-validator>
        <field-validator type="fieldexpression" short-circuit="true">
            <param name="expression"><![CDATA[isUsernameValid(username)]]></param>
            <message>${getText("JS.Validation.UsernameInvalid")}</message>
        </field-validator>
        <field-validator type="fieldexpression" short-circuit="true">
            <param name="expression"><![CDATA[isUsernameNotTaken(username)]]></param>
            <message>${getText("JS.Validation.UsernameIsTaken")}</message>
        </field-validator>
    </field>
   
    <field name="firstName">
        <field-validator type="requiredstring" short-circuit="true">
            <message>${getText("JS.Validation.Required")}</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">50</param>
            <param name="trim">true</param>
            <message>${getText("JS.Validation.Maximum50Characters")}</message>
        </field-validator>
        <field-validator type="fieldexpression" short-circuit="true">
            <param name="expression"><![CDATA[containsOnlySafeCharacters(firstName)]]></param>
            <message>${getText("JS.Validation.SpecialCharacters")}</message>
        </field-validator>
    </field>
    
    <field name="lastName">
        <field-validator type="requiredstring" short-circuit="true">
            <message>${getText("JS.Validation.Required")}</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">50</param>
            <param name="trim">true</param>
            <message>${getText("JS.Validation.Maximum50Characters")}</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="minLength">2</param>
            <message>${getText("JS.Validation.Minimum2Characters")}</message>
        </field-validator>
        <field-validator type="fieldexpression" short-circuit="true">
            <param name="expression"><![CDATA[containsOnlySafeCharacters(lastName)]]></param>
            <message>${getText("JS.Validation.SpecialCharacters")}</message>
        </field-validator>
    </field>

    <field name="email">
        <field-validator type="requiredstring" short-circuit="true">
            <message>${getText("JS.Validation.Required")}</message>
        </field-validator>
        <field-validator type="fieldexpression" short-circuit="true">
            <param name="expression"><![CDATA[containsOnlySafeCharacters(email)]]></param>
            <message>${getText("JS.Validation.SpecialCharacters")}</message>
        </field-validator>
        <field-validator type="email" short-circuit="true">
            <message>${getText("JS.Validation.ValidEmail")}</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="maxLength">100</param>
            <param name="trim">true</param>
            <message>${getText("JS.Validation.Maximum100Characters")}</message>
        </field-validator>
    </field>

    <field name="phone">
        <field-validator type="requiredstring" short-circuit="true">
            <message>${getText("JS.Validation.Required")}</message>
        </field-validator>
        <field-validator type="fieldexpression" short-circuit="true">
            <param name="expression"><![CDATA[containsOnlySafeCharacters(phone)]]></param>
            <message>${getText("JS.Validation.SpecialCharacters")}</message>
        </field-validator>
        <field-validator type="regex" short-circuit="true">
            <!--
                   Allow NANP phones with leadings 1s and potential x1234 extensions as
                   well as international formatted phone numbers. Modified from
                   http://blog.stevenlevithan.com/archives/validate-phone-number and
                   shown in the Regular Expressions Cookbook (O'Reilly, 2009)
               -->
            <param name="expression">
                <![CDATA[^(\+?(?:\(?[0-9]\)?[-. ]{0,2}){9,14}[0-9])((\s){0,4}((?i)x|(?i)ext)(\s){0,4}[\d]{1,5})?$]]></param>
            <message>${getText("JS.Validation.InvalidPhoneFormat")}</message>
        </field-validator>
    </field>

    <field name="password">
        <field-validator type="requiredstring" short-circuit="true">
            <message>${getText("JS.Validation.Required")}</message>
        </field-validator>
        <field-validator type="stringlength" short-circuit="true">
            <param name="minLength">5</param>
            <param name="trim">true</param>
            <message>${getText("JS.Validation.Minimum5Characters")}</message>
        </field-validator>
        <field-validator type="fieldexpression" short-circuit="true">
            <param name="expression"><![CDATA[!(user.password == user.username)]]></param>
            <message>${getText("JS.Validation.CannotBeUsername")}</message>
        </field-validator>
        <field-validator type="fieldexpression" short-circuit="true">
            <param name="expression"><![CDATA[containsOnlySafeCharacters(password)]]></param>
            <message>${getText("JS.Validation.SpecialCharacters")}</message>
        </field-validator>
    </field>

</validators>