<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="ehcache.xsd">
	<diskStore path="java.io.tmpdir" />

	<!--
		These settings will only be applied to a cache created
		programmatically via CacheManager.add(String cacheName)
	-->
	<defaultCache maxElementsInMemory="1000" eternal="false"
		timeToLiveSeconds="120" overflowToDisk="false"
		diskExpiryThreadIntervalSeconds="120" memoryStoreEvictionPolicy="LRU">
	</defaultCache>

	<!--
		For changeable application objects, expire after 24 hours, or if not
		used in 4 hours
	-->
	<cache name="daily" maxElementsInMemory="15000" eternal="false"
		timeToLiveSeconds="86400" timeToIdleSeconds="14400" overflowToDisk="false"
		memoryStoreEvictionPolicy="LFU">
	</cache>

	<!--
        PICS-13051: Configure a dedicated region just for AuditQuestion. Initially, set
        the cache size to 5000, which is about 25% of the total AuditQuestions in the db.
        Use the same TTL, TTI, and eviction policy as the "daily" cache.
    -->
    <cache name="audit_question" maxElementsInMemory="5000" eternal="false"
           timeToLiveSeconds="86400" timeToIdleSeconds="14400" overflowToDisk="false"
           memoryStoreEvictionPolicy="LFU">
    </cache>

    <!--
    PICS-14155: Configure a dedicated region just for App Properties pulled via JDBC (cached
    as strings)
    -->
    <cache name="app_properties" maxElementsInMemory="200" eternal="false"
           timeToLiveSeconds="86400" timeToIdleSeconds="14400" overflowToDisk="false"
           memoryStoreEvictionPolicy="LFU">
    </cache>

    <!--
        For compiled feature toggle groovy scripts
     -->
	<cache name="feature_toggle" maxElementsInMemory="1000" eternal="false"
		timeToLiveSeconds="1800" timeToIdleSeconds="1800" overflowToDisk="false"
		memoryStoreEvictionPolicy="LFU">
	</cache>

    <!--
        Configuring Query Cache
    -->
	<cache name="org.hibernate.cache.StandardQueryCache"
		maxElementsInMemory="5" eternal="false" timeToLiveSeconds="120"
		overflowToDisk="false" />

	<cache name="org.hibernate.cache.UpdateTimestampsCache"
		maxElementsInMemory="1000" eternal="true" overflowToDisk="false" />

</ehcache>
